<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.sghore.chimtubeworld.viewmodel.addBookemarkFrag.AddBookmarkViewModel" />

        <variable
            name="clickListener"
            type="View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewmodel.isLoading() ? View.GONE : View.VISIBLE}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thumbnail_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="H,16:9"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setImage="@{viewmodel.videoData.thumbnail}"
                    tools:src="@drawable/test" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_corner_rec_small"
                    android:backgroundTint="@color/black_alpha_80"
                    android:paddingStart="6dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/thumbnail_image"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail_image"
                    app:setVideoDurationText="@{viewmodel.videoData.duration}"
                    tools:text="20:53" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail_image">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="12dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="12dp" />

                    <TextView
                        android:id="@+id/channel_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@{viewmodel.videoData.channelName}"
                        android:textColor="@color/item_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/guideline_start"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="침착맨" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toEndOf="@id/channel_name_text"
                        app:layout_constraintTop_toTopOf="parent"
                        app:setImageRes="@{viewmodel.videoTypeImage}"
                        tools:src="@drawable/ic_youtube" />

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{viewmodel.videoData.title}"
                        android:textColor="@color/item_color"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end"
                        app:layout_constraintStart_toEndOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/channel_name_text"
                        tools:text="추운 날씨엔 장칼국수" />

                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/title_text"
                        app:setVideoInfoText="@{viewmodel.videoData}"
                        tools:text="조회수 45만회 | 2021.12.12." />

                    <View
                        android:id="@+id/divide_view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/gray_bright_night"
                        app:layout_constraintTop_toBottomOf="@id/info_text" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_bookmark_title_layout"
                        style="@style/TextInputLayoutTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:theme="@style/TextInputLayoutTheme"
                        app:hintEnabled="false"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end"
                        app:layout_constraintStart_toEndOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/divide_view">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="북마크 제목"
                            android:inputType="text"
                            android:maxLength="10"
                            android:text="@={viewmodel.bookmarkTitle}"
                            android:textCursorDrawable="@null" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_video_position_layout"
                        style="@style/TextInputLayoutTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:theme="@style/TextInputLayoutTheme"
                        app:hintEnabled="false"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end"
                        app:layout_constraintStart_toEndOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/input_bookmark_title_layout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_video_position_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="영상 위치 (00:00)"
                            android:inputType="text"
                            android:maxLength="8"
                            android:text="@={viewmodel.videoPosition}"
                            android:textCursorDrawable="@null" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bookmark_color_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/input_video_position_layout"
                        tools:listitem="@layout/item_bookmark_color" />

                    <Button
                        android:id="@+id/add_bookmark_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:layout_marginBottom="12dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="@{clickListener}"
                        android:text="만들기"
                        android:textColor="@color/item_reverse_color"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end"
                        app:layout_constraintStart_toEndOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@id/bookmark_color_list"
                        app:setButtonEnable="@{viewmodel.isEnable()}"
                        tools:backgroundTint="@color/item_color" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewmodel.isLoading() ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>