<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.sghore.chimtubeworld.viewmodel.storeDetailFrag.StoreDetailViewModel" />

        <variable
            name="goodsData"
            type="com.sghore.chimtubeworld.data.Goods" />

        <variable
            name="clickListener"
            type="View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_rec_normal"
            android:backgroundTint="@android:color/white"
            android:padding="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewmodel.isLoading() ? View.INVISIBLE : View.VISIBLE}">

                <ImageView
                    android:id="@+id/thumbnail_image"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setImage="@{viewmodel.selectedImage}"
                    tools:src="@drawable/test" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/preview_image_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail_image"
                    app:layout_constraintStart_toStartOf="@id/thumbnail_image"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail_image"
                    tools:listitem="@layout/item_preview_image" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{goodsData.title}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail_image"
                    app:layout_constraintStart_toStartOf="@id/thumbnail_image"
                    app:layout_constraintTop_toBottomOf="@id/preview_image_list"
                    tools:text="엠드로메다 말년을 건강하게 2022 탁상달력" />

                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{goodsData.price}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@id/thumbnail_image"
                    app:layout_constraintStart_toStartOf="@id/thumbnail_image"
                    app:layout_constraintTop_toBottomOf="@id/title_text"
                    tools:text="9,900원" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.isLoading() ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="@{clickListener}"
            android:text="보러가기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:textColor="@color/black" />
    </LinearLayout>
</layout>