<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/gray_bright_night"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp">

            <View
                android:id="@+id/bookmark_color_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_round"
                tools:backgroundTint="@color/red_online_color" />

            <TextView
                android:id="@+id/bookmark_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/item_color"
                tools:text="북마크 이름 (11:21)" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>